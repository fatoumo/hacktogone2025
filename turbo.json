{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "package.json", "tsconfig.json", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "agents:pull": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "agents:push": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*", "agents-data/**"]
    },
    "agents:deploy": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*", "agents-data/**"]
    },
    "agents:sync": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*", "agents-data/**"]
    },
    "agents:status": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", "agents-data/**"]
    }
  }
}
