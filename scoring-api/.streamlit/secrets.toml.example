# Streamlit Secrets Configuration for Snowflake
# Copy this file to secrets.toml and fill in your actual values
#
# For Snowflake Streamlit Apps:
# - Upload this as secrets in the Snowflake UI (Streamlit App Settings > Secrets)
# - DO NOT commit secrets.toml to version control
#
# For local development:
# - Copy to .streamlit/secrets.toml
# - Fill in your Snowflake credentials

[snowflake]
account = "your_account_identifier"     # e.g., "xy12345.us-east-1"
user = "your_username"                  # Your Snowflake username
password = "your_password"              # Your Snowflake password
warehouse = "COMPUTE_WH"                # Warehouse name
database = "CARBON_SCORING_DB"          # Database name
schema = "PUBLIC"                       # Schema name
role = "PUBLIC"                         # Role to use (adjust as needed)

# Optional: Additional connection parameters
# authenticator = "snowflake"           # Authentication method
# client_session_keep_alive = true      # Keep connection alive
# timezone = "UTC"                      # Timezone setting
